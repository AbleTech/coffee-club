    <%= form.label :roastName, :class => "form-label" %>
    <%= form.text_field :roastName, id: :admin_roast_roastName, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description, :class => "form-label" %>
    <%= form.text_area :description, id: :admin_roast_description, :class => "form-control", :rows => "10" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= form_with(model: admin_roast, local: true) do |form| %>
  <% if admin_roast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_roast.errors.count, "error") %> prohibited this admin_roast from being saved:</h2>

      <ul>
      <% admin_roast.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">

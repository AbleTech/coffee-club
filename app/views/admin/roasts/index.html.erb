<p id="notice"><%= notice %></p>

<h1>List of All Roasts</h1>

<%= link_to 'Add New Roast', new_admin_roast_path, {:class => "btn btn btn-block"} %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Company</th>
      <th>Roastname</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_roasts.each do |admin_roast| %>
      <tr>
        <td><%= admin_roast.company %></td>
        <td><%= admin_roast.roastName %></td>
        <td><%= admin_roast.description %></td>
        <td><%= link_to 'Show', admin_roast %></td>
        <td><%= link_to 'Edit', edit_admin_roast_path(admin_roast) %></td>
        <td><%= link_to 'Destroy', admin_roast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
